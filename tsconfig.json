{
	"extends": "@sylphx/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2022"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"references": [
		{ "path": "packages/core" },
		{ "path": "packages/entity" },
		{ "path": "packages/adapter-cache" },
		{ "path": "packages/adapter-prisma" },
		{ "path": "packages/reify" }
	],
	"files": []
}
